<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geekcoders.payingguest.Activities.PgDetailActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/colorPrimary"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lineLay_pay"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_pgdetail"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:src="@drawable/cat_icon"
                            android:tint="@color/colorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        //Informaion

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/padding5">

                                <TextView
                                    android:id="@+id/tv_name_pgdetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/MediumText" />

                                <TextView
                                    android:id="@+id/tv_city_pgdetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="City"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/SmallText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="@dimen/padding5">

                                <TextView
                                    android:id="@+id/tv_price_pgdetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text="1500/m"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Mediumtext" />

                                <TextView
                                    android:id="@+id/tv_date_pgdetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text="28/05/2018"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Smalltext" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/Margin5"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/Margin5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_number_pgdetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/Margin5"
                                android:text="1234567890"
                                android:textColor="@color/black"
                                android:textSize="@dimen/MediumText" />

                            <TextView
                                android:id="@+id/tv_address_pgdetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/Margin5"
                                android:gravity="left"
                                android:text="Address"
                                android:textColor="@color/black"
                                android:textSize="@dimen/MediumText" />
                        </LinearLayout>
                        //Description

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding5">

                            <TextView
                                android:id="@+id/tv_description_pgdetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Description"
                                android:textSize="@dimen/SmallText" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/Margin5"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/Margin5"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/addCommentEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/Margin5"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/SmallText" />

                            <LinearLayout
                                android:id="@+id/lineLay_addcomment"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="@dimen/Margin5"
                                android:background="@color/colorPrimary"
                                android:orientation="vertical"></LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/Margin10"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/adapter_comment" />

        </LinearLayout>
    </ScrollView>


    //Pay Button

    <LinearLayout
        android:id="@+id/lineLay_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:textColor="@color/black"
            android:textSize="@dimen/LargeText" />
    </LinearLayout>
</RelativeLayout>
